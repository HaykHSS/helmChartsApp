pipeline {
    agent { label 'jenkins-test-agent' }
    stages {
        stage('Build') {
            steps {
                script {
                    docker.build('backend-image', '-f hello-world-backend/Dockerfile .')
                }
            }
        }
        stage('Deploy') {
            steps {
                script {
                    withKubeConfig(caCertificate: '', clusterName: 'minikube', contextName: 'minikube', credentialsId: '', namespace: 'backend', serverUrl: '') {
                        sh 'helm install backend-chart ./charts/backend-chart --namespace backend --set image.repository=backend-image --set image.tag=latest'
                    }
                }
            }
        }
    }
}
